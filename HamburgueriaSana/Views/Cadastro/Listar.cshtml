@model IEnumerable<ProdutoModel>

@{
    ViewData["title"] = "Listagem de Produtos";
}

<h1 class="display-4 text-center">Listagem de Produtos</h1>
<table class="table text-center" style="width:40%, inherit">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Produto</th>
            <th scope="col">Preço</th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            foreach (ProdutoModel produto in Model)
            {
                <tr>
                    <th scope="row">@produto.ProdutoId</th>
                    <td>@produto.Nome</td>
                    <td>@produto.Preco</td>
                    <td>
                        <div class="btn-group mx-2" role="group"></div>
                        <a role="button" class="btn btn-primary" asp-route-id="@produto.ProdutoId" asp-controller="Cadastrar" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@produto.ProdutoId" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                    </td>
                </tr>
            }
        }

        else
        {
            <tr class="odd"> <td valign="top" colspan="5"> Nenhum contato encontrado</td></tr>
        }
    </tbody>
</table>
</div>